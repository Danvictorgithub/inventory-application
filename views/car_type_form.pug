extends cataloguelayout

block container
	div.carForm
		div.wrapper
			form(action="" method="post")
				div.autoPadding
					label(for="name") Car Type Name:
					input(type="text" id="name" name="name" required="true" placeholder="Car Type Name" value=(car_type === undefined ? '':car_type.name))
				div.autoPadding
					button(type="submit") Submit
	if errors
		div.wrapper
			div.autoPadding
				ul
					for error in errors
						li=error.msg